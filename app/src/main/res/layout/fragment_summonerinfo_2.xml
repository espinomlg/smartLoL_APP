<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linear_search">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:hint="@string/summonername"
            android:id="@+id/summinfo_txi_search">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="Espinokiller" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:text="Buscar"
            android:id="@+id/summinfo_btn_search"/>

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linear_search"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/summinfo_img_profileicon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_search"
        android:layout_toEndOf="@id/summinfo_img_profileicon"
        android:layout_toRightOf="@id/summinfo_img_profileicon"
        android:layout_alignBaseline="@id/summinfo_img_profileicon"
        android:layout_marginTop="15dp"
        android:id="@+id/summinfo_txv_summfound"
        tools:text="EspinoKiller"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_search"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/summinfo_txv_victories"
        tools:text="Victorias: 100"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/diamond_v"
        android:layout_toLeftOf="@id/summinfo_txv_victories"
        android:layout_toStartOf="@id/summinfo_txv_victories"
        android:layout_below="@id/linear_search"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/summinfo_img_league" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/summinfo_txv_victories"
        android:layout_toEndOf="@id/summinfo_img_league"
        android:layout_toRightOf="@id/summinfo_img_league"
        android:layout_marginEnd="5dp"
        android:id="@+id/summinfo_txv_defeats"
        tools:text="Derrotas: 0"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/summinfo_rcv_topchamps"/>

</RelativeLayout>