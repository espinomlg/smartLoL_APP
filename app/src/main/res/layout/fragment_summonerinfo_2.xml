<?xml version="1.0" encoding="utf-8"?>
<layout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable name="summoner" type="com.espino.smartlol.models.Summoner"/>
    </data>
    
<RelativeLayout
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_summinfo_withdata">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/summinfo_progressbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linear_search">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:hint="@string/summonername"
            android:id="@+id/summinfo_txi_search">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"
                tools:text="Espinokiller" />

        </android.support.design.widget.TextInputLayout>

        <com.espino.smartlol.customviews.RegionsSpinner
            android:id="@+id/summinfo_spn_regions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.9" />

        <ImageButton
            android:id="@+id/summinfo_btn_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:src="@android:drawable/ic_menu_search"/>

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linear_search"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:id="@+id/summinfo_img_profileicon"
        app:imageUrl="@{summoner.icon}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_search"
        android:layout_toEndOf="@id/summinfo_img_profileicon"
        android:layout_toRightOf="@id/summinfo_img_profileicon"
        android:layout_alignBaseline="@id/summinfo_img_profileicon"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:id="@+id/summinfo_txv_summfound"
        android:text="@{summoner.name}"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_search"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="invisible"
        android:id="@+id/summinfo_txv_victories"
        />
    <!--android:text="@{@string/victories(summoner.leagues.wins)}"-->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/diamond_v"
        android:layout_toLeftOf="@id/summinfo_txv_victories"
        android:layout_toStartOf="@id/summinfo_txv_victories"
        android:layout_below="@id/linear_search"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:id="@+id/summinfo_img_league"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/summinfo_txv_victories"
        android:layout_toEndOf="@id/summinfo_img_league"
        android:layout_toRightOf="@id/summinfo_img_league"
        android:layout_marginEnd="5dp"
        android:id="@+id/summinfo_txv_defeats"
        android:visibility="invisible"
        />
       <!-- android:text="@{@string/defeats(summoner.leagues.losses)}"-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:id="@+id/summinfo_rcv_topchamps"/>

</RelativeLayout>

</layout>